@model WzorceGameShop.ViewModel.CreateGameViewModel
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Game</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Game.Name" class="control-label"></label>
                <input asp-for="Game.Name" class="form-control" />
                <span asp-validation-for="Game.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.Price" class="control-label"></label>
                <input asp-for="Game.Price" type="number" class="form-control" />
                <span asp-validation-for="Game.Price" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Game.Promotion" /> @Html.DisplayNameFor(model => model.Game.Promotion)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Game.Description" class="control-label"></label>
                <textarea asp-for="Game.Description" class="form-control" data-val-maxlength-max="5000"></textarea>
                <span asp-validation-for="Game.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Game.PG" class="control-label"></label>
                <input asp-for="Game.PG" class="form-control" />
                <span asp-validation-for="Game.PG" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select class="form-control" asp-for="Game.StudioId"
                        asp-items="@(Model.Studio)">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <select class="form-control" asp-for="Game.CategoryId"
                        asp-items="@(Model.Category)">
                    <option>Please select one</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
